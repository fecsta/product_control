<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoTitleBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="paddingLayoutDefault">
        <item name="android:padding">20dp</item>
    </style>

    <style name="textViewDefault">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textViewAbout">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="textMenu">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="textViewDefaultRequired">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="textViewDefaultSecond">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="textBorderMultiLine">
        <item name="android:background">@drawable/shape_border</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:lines">3</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="marginTopDefault">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="marginTopDefault2">
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="marginTopDefaultSpinner">
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="CardViewDefault">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardMaxElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="CardViewDefaultGray">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardMaxElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="CardViewMenu">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardMaxElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">110dp</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
    </style>

</resources>
